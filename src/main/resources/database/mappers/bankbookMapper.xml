<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ajh.s1.bankbook.BankBookDAO">

	<select id="getSelect" parameterType="com.ajh.s1.bankbook.BankBookDTO" resultType="com.ajh.s1.bankbook.BankBookDTO">
		SELECT * FROM BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
	</select>
	
	<select id="getList" resultType="com.ajh.s1.bankbook.BankBookDTO">
		SELECT * FROM BANKBOOK
	</select>
	
	<insert id="setInsert" parameterType="com.ajh.s1.bankbook.BankBookDTO">
		INSERT INTO BANKBOOK (bookNumber, bookName, bookRate, bookSale) VALUES(BANKBOOK_SEQ.NEXTVAL, #{bookName}, #{bookRate}, #{bookSale})
	</insert>
	
	<delete id="setDelete" parameterType="java.lang.Long">
		DELETE BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
	</delete>
	
</mapper>